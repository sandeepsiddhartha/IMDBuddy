{
  "name": "IMDBuddy - IMDb Ratings for Hotstar, Netflix, Prime Video & More",
  "short_name": "IMDBuddy",
  "version": "0.0.1",
  "author": "SS",
  "description": "Get instant IMDb ratings while browsing Netflix, Hotstar, Prime Video & other streaming platforms.",
  "permissions": {
    "storage": true,
    "host_permissions": [
      "https://*.hotstar.com/*",
      "https://*.disneyplus.com/*",
      "https://*.netflix.com/*",
      "https://*.primevideo.com/*",
      "https://api.imdbapi.dev/*",
      "https://amazon.com/gp/video/*"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.hotstar.com/*",
        "https://*.disneyplus.com/*",
        "https://*.netflix.com/*",
        "https://*.primevideo.com/*",
        "https://amazon.com/gp/video/*"
      ],
      "js": [
        "core/config.js",
        "core/platforms.js",
        "core/storage.js",
        "core/platform-detector.js",
        "core/title-extractor.js",
        "core/fuzzy-matcher.js",
        "core/api-service.js",
        "core/overlay.js",
        "core/main-extension.js",
        "core/init.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "IMDBuddy - Smart IMDb Ratings"
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
